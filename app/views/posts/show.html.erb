<div style="width: 100%; height:300px; overflow-y: hidden">

</div>
<div class="container" style="margin-top: 2em">
  <div class="row">
    <div class="jumbotron" style="width: 100%; background-color:ivory">
      <h1 class="display-4">
        <%= link_to @post.title, root_path %>
      </h1>
      <p class="lead">
        <%= @post.updated_at.strftime("%d/%m/%Y %H:%M:%S") %> by <%= @post.user.email %>
      </p>
      <hr class="my-4" />
      <div class="post_body">
        <%= @post.description %>
      </div>
    </div>
  </div>

</div>

<div class="container">
  <h3>Add Comment: </h3>
  <div class="row">
    
    <div class="col-12">
      <%= form_with model: [@post, @comment], local: true do |f| %>
        <div class="form-group">
          <%= f.text_area :description, class: 'form-control col-6 '%>
            <%= f.submit "Comment", class: 'btn btn-dark mt-3' %>
        </div>
        
      <% end %>
  
    </div>
  </div>
  <div class="row">
    <div class="col-3">

    </div>
    <div class="col-9">
      <% @comments.each do |comment| %>
        <div class="container">
          <div class="row">
            <div class="col-4"></div>
            <div class="col-8">
                [ <%= comment.created_at.strftime("%d/%m/%Y") %> ] - <%= comment.user.email %> - <%= comment.description %> <br/>
            </div>
          </div>
        </div>
        
      <% end %>
    </div>
  </div>
  
</div>
  

  <%= link_to 'Back',  posts_path %>

