<section class="py-3">
  
  
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th><%= t("title") %></th>
        <th><%= t('owner') %></th> </th>
        <th colspan="3"> <%= link_to "#{t('new')} Post", new_post_path %> </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td> <%= post.title %> </td>
        <td> <%= post.user.email %></td>
        <td> <%= link_to t('edit'), edit_post_path(post) %> </td>
        <td>
          <%= link_to t('show'), post_path(post) %>
        </td>
        <td>
          <%= link_to t('delete'), post_path(post), method: :delete, data: { confirm: 'Você está certo disso ?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  
</section>